    }
  },
  "/crops": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view crops",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/equipment": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view equipment",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
